{
  "name": "addok-server",
  "version": "0.0.0",
  "description": "Full-featured HTTP API for addok",
  "main": "index.js",
  "type": "module",
  "repository": "https://github.com/livingdata-co/addok-server",
  "author": "Jérôme Desboeufs <jerome@livingdata.co>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "lint": "xo",
    "start": "node server"
  },
  "dependencies": {
    "addok-cluster": "^0.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "xo": "^0.53.1"
  },
  "xo": {
    "semicolon": false,
    "space": 2,
    "rules": {
      "comma-dangle": [
        "error",
        "never"
      ],
      "unicorn/prevent-abbreviations": "off",
      "import/no-unassigned-import": "off"
    }
  },
  "engines": {
    "node": ">= 18.12"
  }
}
